<form action="post" method="/user/show">
  <label>Sign Up Below:</label>
  <br></br>
  <label>Username:</label>
  <input type "text" name="user[name]" value="user_name" id="user_name">
  <br></br>
  <label>Enter a valid email address:</label>
  <input type="text" name="user[email]" value="user_email" id="user_email">
  <br></br>
  <label>Create a password to Signup:</label>
  <input type="name" name="user[password]" value="user_password" id="user_password">
  <br></br>
  <label>Press enter to Signup</label>
  <input type="submit" name="Enter" value="Sign up">
</form>
